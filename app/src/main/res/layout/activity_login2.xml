<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Activities.Login2">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/imageView23"
            android:background="@drawable/logo" />



        <ImageView
            android:layout_width="154dp"
            android:layout_height="135dp"
            android:id="@+id/imageView"
            android:background="@drawable/geo"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" />



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout2"></LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="0dp"
            android:text="Recordarme" />

        <EditText
            android:id="@+id/input_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_pass"
            android:hint="Ingresa tu contraseña"
            android:textColorHint="#504e4e"
            android:layout_marginBottom="43dp"
            android:layout_above="@+id/btnIngresar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:backgroundTint="#8d8c8c"

            android:password="true" />



    </android.support.design.widget.TextInputLayout>

    <Button

        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:theme="@style/RaisedButton"
        android:id="@+id/btnIngresar"
        android:layout_below="@+id/input_layout_name"
        android:layout_alignRight="@+id/input_layout_name"
        android:layout_alignEnd="@+id/input_layout_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="¿Has olvidado tu contraseña?"
        android:id="@+id/tvRecuperar"
        android:textColor="@color/primary_dark"
        android:textColorLink="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Usuario \n"
        android:drawableLeft="@drawable/ic_user"
        android:id="@+id/lblUsuario"
        android:textColor="#757272"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/linearLayout2"
        android:textSize="17dp" />



</RelativeLayout>
