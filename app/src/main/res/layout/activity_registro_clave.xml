<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context=".Activities.RegistroClave">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/imageView23"
            android:background="@drawable/logo" />


        <ImageView
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:background="@drawable/geo"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            />



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ingresa tu contraseña"
            android:textColor="@color/black"
            android:id="@+id/textView5"
            android:layout_above="@+id/edClave"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edClave"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:password="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Repite tu contraseña"
            android:textColor="@color/black"
            android:id="@+id/textView6"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/edClave"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edClave2"
            android:layout_below="@+id/textView6"
            android:layout_alignRight="@+id/btnIngresar"
            android:layout_alignEnd="@+id/btnIngresar"
            android:layout_marginTop="5dp"
            android:password="true" />




        <Button

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="REGISTRARSE"
            android:theme="@style/RaisedButton"
            android:id="@+id/btnRegistrar"

            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/edClave"
            android:layout_alignEnd="@+id/edClave"
            android:layout_gravity="right"
            />



    </LinearLayout>


</RelativeLayout>
