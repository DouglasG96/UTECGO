<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.jorge.utecgo.Menu_Inicio">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnImg"
            android:background="@android:drawable/ic_menu_close_clear_cancel" />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/imageView23"
            android:background="@drawable/logo" />



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"

        android:weightSum="1">

        <Button

            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:theme="@style/RaisedButton"
            android:id="@+id/btnIngresar"
            android:layout_below="@+id/input_layout_name"
            android:layout_alignRight="@+id/input_layout_name"
            android:layout_alignEnd="@+id/input_layout_name"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#cc0000"
            android:layout_marginTop="20dp"

            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"

            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6a6464"
                android:text="No tienes una cuenta aun? "
                />

        </LinearLayout>

        <Button
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:theme="@style/RaisedButtonWhite"
            android:id="@+id/btnRegistro"
            android:layout_below="@+id/input_layout_name"
            android:layout_alignRight="@+id/input_layout_name"
            android:layout_alignEnd="@+id/input_layout_name"
            android:gravity="center"
            android:textColor="#cc0000"
            android:layout_gravity="center_horizontal"
            android:background="@color/white" />

<!--
        <Button
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Externos"
            android:theme="@style/RaisedButtonWhite"
            android:id="@+id/btnExterno"
            android:layout_below="@+id/input_layout_name"
            android:layout_alignRight="@+id/input_layout_name"
            android:layout_alignEnd="@+id/input_layout_name"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@color/green" />
-->


    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView3"
        android:background="@drawable/marcador"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
